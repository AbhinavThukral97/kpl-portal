<section>
  <div class="form-content">
    <h1>Register</h1>
    <% include ./partials/messages %>
    <form method="POST" action="/users/register">
      <label for="name">Full Name</label>
      <input
        type="text"
        name="name"
        id="name"
        value="<%= typeof name!='undefined' ? name : '' %>"
      />
      <label for="username">Username</label>
      <input
        type="text"
        name="username"
        id="username"
        value="<%= typeof username!='undefined' ? username : '' %>"
      />
      <label for="password">Password</label>
      <input type="password" name="password" id="password" />
      <label for="account">Account Type</label>
      <select name="account">
        <option disabled selected="true">Select Account Type</option>
        <option value="Employee">Employee</option>
        <option value="PR Manager">PR Manager</option>
        <option value="Academic Head">Academic Head</option>
        <option value="CEO">CEO</option>
        <option value="Admin">Admin</option>
      </select>
      <input type="submit" value="Register" />
      <a href="./accounts"
        ><button type="button" class="plain">Back to Dashboard</button></a
      >
    </form>
  </div>
</section>
